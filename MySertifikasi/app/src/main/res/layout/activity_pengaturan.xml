<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu"
    tools:context=".PengaturanActivity">

    <RelativeLayout
        android:id="@+id/relativeLayoutText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_relative_login"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/txt_pengaturan"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="Pengaturan"
            android:layout_marginLeft="115dp"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_relative_login"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp">

    <TextView
        android:id="@+id/txt_ganti_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text= "@string/ganti_pass"/>

    <TextView
        android:id="@+id/txt_pass_ini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ganti_pass"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:text="Password saat ini" />

    <EditText
        android:id="@+id/pass_ini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:inputType="textPassword"
        android:layout_below="@+id/txt_pass_ini"/>

    <TextView
        android:id="@+id/txt_pass_baru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass_ini"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:text="Password Baru" />

    <EditText
        android:id="@+id/pass_baru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@+id/txt_pass_baru"/>

    <Button
        android:id="@+id/btn_simpan_pengaturan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass_baru"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_login"
        android:textColor="@color/white"
        android:text="Simpan" />

    <Button
        android:id="@+id/btn_back_pengaturan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_simpan_pengaturan"
        android:background="@drawable/btn_register"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:text="Kembali" />

    <ImageView
        android:id="@+id/foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_back_pengaturan"
        android:layout_marginTop="50dp"
        android:src="@drawable/foto"/>

    <TextView
        android:id="@+id/txt_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="120dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="@string/about" />

        <TextView
            android:id="@+id/tulisan"
            android:layout_width="wrap_content"
            android:layout_height="101dp"
            android:layout_below="@+id/txt_about"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="5dp"
            android:text="@string/tulisan"
            android:textColor="@color/black" />
    </RelativeLayout>
</RelativeLayout>